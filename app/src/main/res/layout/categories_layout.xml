<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_green"
    android:orientation="vertical"
    android:fillViewport="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:measureWithLargestChild="false"
        android:showDividers="beginning|end"
        android:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/saladButton"
                android:src="@drawable/salad_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:onClick="saladCatButton"
                android:contentDescription="@string/salad_descr"
                android:cropToPadding="false"
                android:background="#ffffff"
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginRight="1.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/soupButton"
                android:src="@drawable/soup_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:contentDescription="@string/name_soupButton"
                android:layout_marginLeft="1.5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/name_saladButton"
                android:id="@+id/button_salad_bottom"
                android:onClick="saladCatButton"
                android:layout_column="0"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:layout_marginRight="1.5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/name_soupButton"
                android:id="@+id/button_soup_bottom"
                android:layout_column="1"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/meatButton"
                android:src="@drawable/meat_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_meatButton"
                android:padding="5dp"
                android:layout_marginRight="1.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/chickenButton"
                android:src="@drawable/chicken_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_chickenButton"
                android:padding="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/name_meatButton"
                android:id="@+id/button_meat_bottom"
                android:onClick="saladCatButton"
                android:layout_column="0"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:layout_marginRight="1.5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/name_chickenButton"
                android:id="@+id/button_chicken_bottom"
                android:layout_column="1"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/vtoroeButton"
                android:src="@drawable/vtoroe_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_vtoroeButton"
                android:padding="5dp"
                android:layout_marginRight="1.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/fishButton"
                android:src="@drawable/fish_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_fishButton"
                android:padding="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/name_vtoroeButton"
                android:id="@+id/button_vtoroe_bottom"
                android:onClick="saladCatButton"
                android:layout_column="0"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:layout_marginRight="1.5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/name_fishButton"
                android:id="@+id/button_fish_bottom"
                android:layout_column="1"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/vegetablesButton"
                android:src="@drawable/vegetables_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_vegetablesButton"
                android:padding="5dp"
                android:layout_marginRight="1.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/vypechkaButton"
                android:src="@drawable/vypechka_cat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#ffffff"
                android:contentDescription="@string/name_vypechkaButton"
                android:padding="5dp"
                android:layout_marginLeft="1.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/name_vegetablesButton"
                android:id="@+id/button_vegetables_bottom"
                android:onClick="saladCatButton"
                android:layout_column="0"
                android:layout_weight="1"
                android:padding="-5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
